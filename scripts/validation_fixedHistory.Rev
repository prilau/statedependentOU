cont <- readContinuousCharacterData("data/1_validation/artiodactyla/artiodactyla_Continuous.nex")
cont.excludeAll()
cont.includeCharacter(characterCont)

disc <- readDiscreteCharacterData("data/1_validation/artiodactyla/artiodactyla_Discrete.nex")
num_disc_states <- disc.getStateDescriptions().size()
disc.excludeAll()
disc.includeCharacter(characterDisc)


# Get some useful variables from the data. We need these later on.
taxa <- cont.taxa()

